{
  "name": "cat-escape",
  "version": "1.0.5",
  "description": "A co-op game where you escape the cat",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/codingkatty/build-test.git"
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.violetzcandy.escape",
    "asar": true,
    "productName": "Cat Escape",
    "files": [
      "**/*",
      "offline/**/*",
      "assets/**/*",
      "gameassets/**/*",
      "fonts/**/*"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "app",
        "filter": [
          "assets/**/*",
          "gameassets/**/*",
          "fonts/**/*",
          "offline/**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "repo": "build-test",
      "owner": "codingkatty"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon-win.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Game",
      "icon": "assets/icon-linux.png"
    }
  },
  "keywords": [],
  "author": "Vio Studios",
  "email": "m001720@permatapintar.ukm.edu.my",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12"
  }
}
